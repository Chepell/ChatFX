<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="230.0" maxWidth="260.0" minHeight="230.0" minWidth="260.0" prefHeight="230.0" prefWidth="260.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chat.ServerStartController">
    <children>
        <TextField fx:id="portField" focusTraversable="false" layoutX="13.0" layoutY="130.0" prefHeight="37.0" prefWidth="150.0" promptText="Input Server Port">
            <font>
                <Font size="16.0" />
            </font>
        </TextField>
        <Label layoutX="15.0" layoutY="103.0" text="Server Port">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <Button layoutX="142.0" layoutY="180.0" mnemonicParsing="false" onAction="#startServer" text="Start Server">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <Button layoutX="15.0" layoutY="180.0" mnemonicParsing="false" onAction="#closeProgram" text="Cancel">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <Label fx:id="errorLabel" layoutX="11.0" layoutY="14.0" text="Server Port">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
      <Hyperlink layoutX="151.0" layoutY="3.0" onAction="#openServerSettings" text="database settings" />
      <ImageView fitHeight="123.0" fitWidth="104.0" layoutX="150.0" layoutY="65.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@pics/serverOff.png" />
         </image>
      </ImageView>
    </children>
</AnchorPane>
